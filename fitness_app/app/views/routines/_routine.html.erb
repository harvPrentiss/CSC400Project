<li id="<%= routine.id %>">
  <div class="exercise">
  	<% if @workoutEdit %>
	    <h1 class="exerciseLabel"><span class='noColor'>Name:</span> <%= routine.R_title %></h1>
	<% else %>
		<%= link_to routine.R_title, routine, class:"followStats centered" %>
	<% end %>
	    <% if current_user?(routine.user) && @workoutEdit  %>
	    	<%= link_to "Edit", edit_routine_path(routine.id), class:"followStats right" %>
	    	<%= link_to "Delete", routine, method: :delete, data: {confirm:"You sure?"}, title: routine.R_title, class:"followStats deleteLink right" %>
	    <% end %>
  </div>
</li>