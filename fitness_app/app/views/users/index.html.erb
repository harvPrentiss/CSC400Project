<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="usersList">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.displayName, user %>
      <% if current_user.admin? && !current_user?(user) %>
        <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>