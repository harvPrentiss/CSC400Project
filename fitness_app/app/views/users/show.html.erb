<% provide(:title, @user.displayName) %>
<aside class="leftContent">
	<% if @user.profileImgURL.to_s != '' && @user.profileImgURL  %>
		<%= image_tag(@user.profileImgURL, alt:@user.displayName) %>
	<% end %>
	<h1 class="userName"><%= @user.displayName %><h1>
	<% unless @user.hideStats %>
		<h2 class="stats">Height: <%= @user.heightM %></h2>
		<h2 class="stats">Weight: <%= @user.weightM %></h2>
		<h2 class="stats">Body Fat: <%= @user.bodyFatM %>%</h2>
	<% end %>
	<section>
		<%= render 'shared/stats' %>
	</section>
	<section>
		<% if @user == current_user %>
			<%= render 'shared/status_form' %>
		<% else %>
			<%= render 'follow_form' if signed_in? %>
	<% end %>
	</section>
</aside>

<section class="middleContent">
		<ol class="statusList">
			<% if @user.statuses.any? %>
				<li><h1 class="userName" style="margin-left: 5px;">Whats going on</h1></li>
				<%= render @statuses %>
			<% else %>
				<li><h1 class="userName" style="margin-left: 5px;">Nothing going on :(</h1></li>
			<% end %>
		</ol>
		<%= will_paginate @statuses %>
</section>

<% if @user == current_user %>
	<section class="rightContent">
			<ol class="buddyList">
				<% if @buddies.any? %>
					<li><h1 class="userName" style="margin-left: 5px;">Buddies</h1></l1>
					<%= render @buddies %>
				<% else %>
					<li><h1 class="userName" style="margin-left: 5px">No Buddies :(</h1></li>
				<% end %>
			</ol>
	</section>
<% end %>